  /* Add your custom styles here */

/* Shop By Category section */

.category-section{
  font-family: "Bacasime Antique", serif;
}

.row {
    margin-top: 20px;
    margin-bottom: 100px;
    
}

.category-item {
    position: relative;
    margin-left: 20px;
    flex: 1; /* Make each category item take equal space */
    max-width: calc(50% - 40px); /* Set maximum width for each item to occupy half of the container's width */
}

.category-item h2 {
  font-family: "Bacasime Antique", serif;
    z-index: 1;
    text-align: center;
    top: 10px;
    left: 10px;
    color: black;
    font-size: 24px;
    z-index: 1;
}


.explore-btn {
  font-family: "Bacasime Antique", serif;
    position: absolute;
    top: 90%;
    left: 50%;
    transform: translate(-50%, -50%);
    padding: 10px 20px;
    background-color: transparent;
    color: #000;
    text-decoration: none;
    font-size: 30px;
    font-weight: bold;
    border-radius: 5px;
    z-index: 1;
}


.category-items{
  display: flex;
}
.category-image {
    position: relative;
    overflow: hidden;
    padding: 20px;
}

.category-image img {
    border-radius: 20px;
    height: 570px;
    width: 650px;
    transition: transform 0.3s ease-in-out; /* Add transition for transform property */
}

.category-image img:hover {
    transform: scale(1.1); /* Increase scale on hover */
}



