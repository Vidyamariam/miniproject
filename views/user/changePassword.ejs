<form class="row" action="/change-password" method="post" id="changepassword">
  <div style="margin-bottom: 10px">
    <label for="existingPassword">Existing Password:</label>
    <input
      type="password"
      id="existingPassword"
      name="existingPassword"
      required
    />
    <br />
    <small style="color: red"><%= locals.error %></small>
  </div>
  <div style="margin-bottom: 10px">
    <label for="newPassword">New Password:</label>
    <input type="password" id="newPassword" name="newPassword" required />
    <br />
    <small style="color: red"><%= locals.newPassworderror %></small>
  </div>
  <div style="margin-bottom: 10px">
    <label for="confirmPassword">Confirm New Password:</label>
    <input
      type="password"
      id="confirmPassword"
      name="confirmPassword"
      required
    />
    <br />
    <small style="color: red"><%= locals.newPassworderror %></small>
  </div>
  <div>
    <button type="submit">Change Password</button>
  </div>
</form>

