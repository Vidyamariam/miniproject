    <style>
      #changepassword {
        width: 400px;
        margin: 20px auto;
        padding: 20px;
        border: 1px solid #ccc;
        border-radius: 5px;
        background-color: #f9f9f9;
      }
      #changepassword label {
        display: block;
        margin-bottom: 5px;
      }
      #changepassword input {
        width: 100%;
        padding: 8px;
        margin-bottom: 10px;
        border: 1px solid #ccc;
        border-radius: 4px;
        box-sizing: border-box;
      }
      #changepassword small {
        display: block;
        margin-top: 5px;
      }
      #changepassword button {
        padding: 10px 20px;
        background-color: #007bff;
        color: #fff;
        border: none;
        border-radius: 4px;
        cursor: pointer;
      }
      #changepassword button:hover {
        background-color: #0056b3;
      }
    </style>

