<link
  rel="stylesheet"
  href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css"
/>
<style>
  /* CSS for the animated tick mark */
  @keyframes drawTick {
    0% {
      stroke-dashoffset: 100;
    }
    100% {
      stroke-dashoffset: 0;
    }
  }

  .tick {
    width: 100px;
    height: 100px;
    stroke: green;
    stroke-width: 3;
    fill: none;
    stroke-dasharray: 100;
    stroke-dashoffset: 100;
    animation: drawTick 0.5s ease forwards;
  }
  .orderSuccessImg {
    display: flex;
    justify-content: center;
  }
</style>
