      <% products.forEach((product)=> { %> <% if (product.isListed) { %>

          <div class="col-md-3">
            <div class="card" id="product">
              <a href="/productDetails/<%= product._id %>">
                <img src="<%= product.productImage[0] %>" class="card-img-top" alt="..." />
              </a>

              <div class="card-body" id="pdt-cardbdy">
                <h6 class="card-text">
                  <%= product.name %>
                </h6>

                <% // Check if there is a category offer for the product's category var
                  categoryOffer=categories.find(category=> category.categoryName === product.category)?.categoryOffer ||
                  0;
                  // Calculate the maximum discount between category offer and product discount
                  var maxDiscount = Math.max(categoryOffer, product.discount);
                  // Calculate the discounted price
                  var discountedPrice = product.price - (product.price * maxDiscount / 100);
                  %>

                  <% if (maxDiscount> 0) { %>
                    <h6 class="card-title">
                      <!-- Display original price and discounted price -->
                      <s>
                        <%= product.price %>
                      </s>
                      <%= discountedPrice %>
                    </h6>
                    <% } else { %>
                      <h6 class="card-title">
                        <%= product.price %>
                      </h6>
                      <% } %>
                        <form onsubmit="addToCart('<%= product._id %>'); return false;">
