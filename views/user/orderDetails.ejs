  <body>
    <header>
      <div id="header-info">
        <!-- <p id="contactus">Contact Us</p> -->
        <img src="/img/amoli-jewels-high-resolution-logo-black.png" class="logo" />
        <h1 id="store-name">Amoli Jewels</h1>
        <div class="nav-icons">
          <div class="dropdown" id="my-account-dropdown">
            <a id="my-account" onclick="toggleDropdown()"><i class="fa fa-regular fa-user fa-xl"></i> My Account</a>
            <div class="dropdown-content" id="account-options">
              <a href="/profile"><i class="fa fa-regular fa-user fa-sm"></i> My Profile</a>
              <a href="#"><i class="fa fa-regular fa-receipt fa-sm"></i> Orders</a>
              <a href="#"><i class="fa fa-regular fa-heart fa-sm"></i> Wishlist</a>
              <a href="#"><i class="fa fa-regular fa-ticket fa-sm"></i> Coupons</a>
              <a href="/logout"><i class="fa fa-regular fa-sign-out-alt fa-sm"></i> Logout</a>
            </div>
          </div>
          
          <a id="addtocart" href="/cart" style="color: black; text-decoration: none;">My Cart 
            <i
            class="fa fa-duotone fa-cart-shopping fa-xl"></i>


            <!-- (
              <% if (typeof quantityInCart !== "undefined") { %>
                <%= quantityInCart %>
              <% } else { %>
                0
              <% } %>) -->

          
          </a>
        </div>
        </div>
      </div>

      <nav id="nav-bar">
        <a href="/home">Home</a>
        <a href="">About us</a>
        <a href="">Contact</a>
        <a href="/all-products">Products</a>
        <img src="" id="search-icon" />
      </nav>
    </header>
    <div class="order-main">
    
      <div class="address">
          <h5>Delivery Address</h5>
          <p>Name: <%= order.address.name %></p>
          <p>Address: <%= order.address.address %>, <%= order.address.locality %>,
              <%= order.address.phone %>, <%= order.address.state %> - <%= order.address.pincode %>
          </p>
          <p>Phone: <%= order.address.phone %></p>
          <p>Payment Method: <%= order.paymentMethod %> </p>
      </div>
      <div class="product-details">
          <h5>Product Details</h5>
          <div class="product">
              <img src="<%= product.productImage[0] %>" alt="Product Image" />
              <div class="pd-text">
                  <p>Product Name: <%= product.productName %></p>
                  <p>Quantity: <%= product.quantity %></p>
                  <p>Price: <%= product.price %></p>
                  <!-- Add more product details here -->
              </div>
          </div>
          <% if (product.status === 'cancelled') { %>
            <div class="cancelled-message" style="color: red;">
                <p>Order Cancelled</p>
            </div>
        <% } %>
        <% if (product.status === 'Returned') { %>
          <div class="cancelled-message" style="color: blue;">
              <p>Order Returned</p>
          </div>
      <% } %>
          <div class="tp">
              <h4>Total Price: <%= order.totalPrice %></h4>
          </div>
          <div class="invoice-download">
            <a href="/download-invoice/<%= order._id %>/<%= product.productId %>" class="btn btn-sm btn-dark">Download Invoice</a>
          </div>
      </div>  

    
    </div>


  <a  href="/order-history">
    <button class="btn btn-dark backtooder" style="margin-left: 10px;"> Back to orders</button>
  </a>
  
