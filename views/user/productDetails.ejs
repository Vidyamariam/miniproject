<style>
      body {
        font-family: 'Arial', sans-serif;
        background-color: #f4f4f4;
      }

      .product-container {
        display: flex;
        justify-content: space-between;
        padding: 20px;
      }

      .images-section {
        width: 50%;
        display: flex;
      }

      .images-section img {
        width: 100%;
        height: auto;
        margin-bottom: 10px;
      }

      .small-images-column {
        display: flex;
        flex-direction: column;
        gap: 10px;
        margin-top: 10px;
      }

      .small-images-column img {
        width: 100px; /* Adjust the width as needed */
        height: auto;
        cursor: pointer;
      }

      .details-section {
        width: 50%;
        align-items: center;
        margin-top: 60px;
      }

      h2 {
        margin-top: 0;
      }

      .ratings {
        margin-bottom: 10px;
      }

      .price {
        font-weight: bold;
      }

      .description {
        margin-bottom: 20px;
      }

      .buttons button {
        margin-right: 10px;
        padding: 10px;
        font-size: 16px;
        cursor: pointer;
      }

/* Add your own styling as needed */
    </style>
  </head>
  <body>
    <header>
      <div id="header-info">
        <!-- <p id="contactus">Contact Us</p> -->
        <img src="/img/siteLogo1.png" class="logo" />
        <h1 id="store-name">STEPUP SHOES</h1>
        <div class="nav-icons">
          <a id="favourite"><i class="fa fa-regular fa-heart fa-xl"></i></a>
          <a id="addtocart"><i class="fa fa-duotone fa-cart-shopping fa-xl"></i></a>
          <a id="user"><i class="fa-solid fa-user fa-xl" ></i></a>
        
        </div>
        </div>
      </div>

      <nav id="nav-bar">
        <a href="/home">Home</a>
        <a href="/athleticshoes">Athletic shoes</a>
        <a href="">Boots</a>
        <a href="">Sneakers</a>
        <img src="" id="search-icon" />
      </nav>
    </header>

      <!-- Breadcrumbs -->
      <div class="breadcrumbs">
        <a href="/home">Home</a> &gt; 
        <a href="/athleticshoes">Athletic shoes</a> &gt; 
        <a href="/productDetails/<%= productdetails.name %>"><%= productdetails.name %></a> &gt;
      </div>

   
      <div class="product-container">
        <!-- Details Section -->
        <div class="details-section">
          <h2><%= productdetails.name %></h2>
          
          <!-- Ratings -->
          <div class="ratings">
            <p>Ratings: ★★★★☆</p>
          </div>
          
          <!-- Price -->
          <p class="price"><%= productdetails.price %></p>
  
          <!-- Sold Out Message -->
          <% if (productdetails.stock === 0) { %>
            <div class="sold-out-message">
              <p>This item is currently out of stock</p>
            </div>
          <% } %>
  
          <!-- Enter Email Section with Notify Me button -->
          <div class="enter-email-section">
            <label for="emailInput">Enter your email to get notified when this item is back in stock:</label>
            <input type="email" id="emailInput" name="email" required />
            <button style="background-color: rgb(229, 180, 45);" onclick="notifyMe()">Notify Me</button>
          </div>
          
          <!-- Description -->
          <h4 class="description">
           <%= productdetails.description %>
          </h4>
  
          <!-- Buttons -->
          <div class="buttons">
            <button id="buyNowBtn" class="button" onclick="buyNow()">Buy Now</button>
            <button id="addToFavoritesBtn" class="button" onclick="addToFavorites()">Add to Favorites</button>
          </div>
  
          <!-- Highlights Section -->
          <div class="highlights-section">
            <h5>Product Highlights</h5>
            <ul>
              <li>Water-resistant</li>
              <li>Longlasting</li>
              <!-- Add more highlights as needed -->
            </ul>
          </div>
        </div>
  
        <div class="images-section">
          <!-- Main Image -->
          <img style="width: 300px; height: 300px;" src="<%= productdetails.productImage[0] %>" alt="Main Product Image" id="mainImage">
        
          <!-- Small Images Column -->
          <div class="small-images-column">
            <% productdetails.productImage.forEach((image, index) => { %>
                <img src="<%= image %>" alt="Small Image <%= index + 1 %>" onclick="changeMainImage('<%= image %>')">
            <% }); %>
          </div>
        </div>
      </div>

<!-- Your existing HTML -->

<script src="https://unpkg.com/swiper/swiper-bundle.min.js"></script>
<script src="https://unpkg.com/lightgallery/dist/js/lightgallery.min.js"></script>
