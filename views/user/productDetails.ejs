<script>
  document.addEventListener("DOMContentLoaded", function () {
    const container = document.querySelector(".MasterImg");
    const img = container.querySelector("img");

    container.addEventListener("mousemove", (e) => {
      const rect = container.getBoundingClientRect();
      const x = e.clientX - rect.left;
      const y = e.clientY - rect.top;

      const xOffset = (x / container.offsetWidth - 0.5) * 100;
      const yOffset = (y / container.offsetHeight - 0.5) * 100;
      const zOffset = 10;

      img.style.transformOrigin = `${xOffset + 50}% ${yOffset + 50}%`;
      img.style.transform = `scale(2) translateZ(${zOffset}px)`;
    });

    container.addEventListener("mouseleave", () => {
      img.style.transformOrigin = 'center center';
      img.style.transform = 'scale(1)';
    });
  });

  function changeMainImage(imageSrc) {
    console.log('Changing main image to:', imageSrc);
    // Replace 'mainImage' with the actual ID of the image element you want to change
    document.getElementById('mainImage').src = imageSrc;
  }
</script>

