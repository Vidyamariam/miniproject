<!--CONTAINER-->
<div class="product-container">

  <!-- Small Images Column -->
  <div class="images-section">
    <div class="small-images-column">
      <% productdetails.productImage.forEach((image, index)=> { %>
        <img src="<%= image %>" alt="Small Image <%= index + 1 %>" onclick="changeMainImage('<%= image %>')">
      <% }); %>
    </div>
  </div>

  <!-- Main Image -->
  <div id="container" class="MasterImg">
    <img style="width: 300px; height: 300px;" src="<%= productdetails.productImage[0] %>" alt="Main Product Image"
         class="lightbox-image" data-lightbox="product-gallery" data-title="<%= productdetails.name %>" id="mainImage"/>
  </div>

  <!-- Details Section -->
