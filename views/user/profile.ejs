<script>
  // Add an event listener to the button to handle the click event
  document
    .getElementById("createReferralButton")
    .addEventListener("click", async () => {
      try {
        const response = await fetch("/createReferral", {
          method: "POST",
          headers: {
            "Content-Type": "application/json",
          },
          // If you need to send any data in the request body, include it here
          body: JSON.stringify({}),
        });
        const data = await response.json();
        // Update the UI with the generated referral code
        document.getElementById("referralCodeSpan").innerText =
          "Referral code: " + data.referralCode;
        // Display the referral code container
        document.getElementById("referralCodeContainer").style.display =
          "block";
      } catch (error) {
        console.error("Error creating referral:", error);
        // Handle any errors that occur during the request
        // Display an error message to the user if needed
      }
    });
</script>

