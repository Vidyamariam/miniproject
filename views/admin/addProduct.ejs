<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Add Product</title>
    <link rel="stylesheet" href="/stylesheets/admin/addProduct.css" />

    <!-- CROPPER-LINK -->
    <link
      rel="stylesheet"
      href="https://unpkg.com/cropperjs/dist/cropper.min.css"
    />
    <script src="https://unpkg.com/cropperjs/dist/cropper.min.js"></script>
    <link rel="stylesheet" href="/stylesheets/admin/addProduct.css" />
  </head>

  <body>
    <div class="title">
      <h2>Add Product Form</h2>
    </div>
    <div class="main">
      <form
        action="/admin/addproduct/:<%=product._id%>"
        method="POST"
        enctype="multipart/form-data"
      >
        <label for="productName">Product Name:</label>
        <input type="text" id="productName" name="name" required />

        <label for="Category">Category:</label>
        <select id="Category" name="category">
          <% categories.forEach((category) => { %> <% if (category.isListed) {
          %>
          <option><%= category.categoryName %></option>
          <% } %> <% }); %>
        </select>

        <label for="images">Images:</label>
        <input
          class="form-control"
          type="file"
          id="productImage"
          name="productImage"
          accept="image/*"
          multiple
          required
          onchange="handleImageSelection(this)"
        />

        <!--Cropper-container-->
        <div id="cropperContainer"></div>

        <!-- Image preview container -->
        <div id="imagePreviewContainer">
          <img id="imagePreview" src="#" alt="Image Preview" />
        </div>

        <label for="description">Description:</label>
        <textarea id="description" name="description"></textarea>

        <label for="rating">Rating:</label>
        <input type="number" id="rating" name="rating" step="1" required />

        <label for="price">Price:</label>
        <input type="number" id="price" name="price" required />

        <label for="discount">Discount:</label>
        <input
          type="number"
          id="discount"
          name="discount"
          step="0.01"
          required
        />

        <label for="stock">Stock:</label>
        <input type="number" id="stock" name="stock" step="1" required />

        <!-- Removed increase/decrease buttons for price and discount -->
        <div>
          <button type="submit">Submit</button>
          <button type="button" onclick="cancelForm()">Cancel</button>
        </div>
      </form>
    </div>

    <script>
      function previewImage(input) {
        var previewContainer = document.getElementById("imagePreviewContainer");
        var previewImage = document.getElementById("imagePreview");

        // Check if a file is selected
        if (input.files && input.files[0]) {
          var reader = new FileReader();

          reader.onload = function (e) {
            previewImage.src = e.target.result;
            previewContainer.style.display = "block";
          };

          reader.readAsDataURL(input.files[0]);
        } else {
          previewImage.src = "";
          previewContainer.style.display = "none";
        }
      }

      function cancelForm() {
        // Add logic to handle cancel action
        alert("Form canceled");
      }

      function handleImageSelection(input) {
        previewImage(input); // Call the image preview function
        initCropper(input); // Call the cropper initialization function
      }

      function initCropper(input) {
        var cropperContainer = document.getElementById("cropperContainer");
        cropperContainer.innerHTML = ""; // Clear previous cropper instances

        if (input.files && input.files[0]) {
          var cropper = new Cropper(cropperContainer, {
            aspectRatio: 1, // Adjust the aspect ratio as needed
            viewMode: 2, // Set the view mode (0, 1, 2, 3)
            crop: function (event) {
              // Access cropped data: event.detail.x, event.detail.y, event.detail.width, event.detail.height
            },
          });

          var reader = new FileReader();

          reader.onload = function (e) {
            cropper.replace(e.target.result);
          };

          reader.readAsDataURL(input.files[0]);

          // Display the cropper container
          cropperContainer.style.display = "block";
        } else {
          cropperContainer.style.display = "none";
        }
      }
    </script>
  </body>
</html>
