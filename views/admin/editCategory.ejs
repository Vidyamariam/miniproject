          </li>
        </ul>
      </article>

      <article class="col-md-9 article-right">
        <div class="title">
          <h2>Admin - Edit Category</h2>
          <% if (typeof message !== 'undefined') { %>
          <div class="Errormsg">
            <small style="color: blue"><%= message %></small>
          </div>
          <% } %>
        </div>
        <form action="/admin/editcategory/<%= id %>" method="post">
          <div class="form-group">
            <label for="category">Category:</label>

            <input
              type="text"
              id="categoryName"
              name="categoryName"
              placeholder="Enter category name"
              value="<%= name %>"
            />
          </div>
          <button class="save-btn" type="submit">save</button>
        </form>
      </article>
    </section>

