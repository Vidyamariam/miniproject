<script>
    //block option
    var isBlocked = false;

    function toggleBlock() {
      isBlocked = !isBlocked;
      var button = document.querySelector(".block-btn");

      if (isBlocked) {
        button.textContent = "Blocked";
        button.classList.add("blocked");
      } else {
        button.textContent = "Unblock";
        button.classList.remove("blocked");
      }
